#! /bin/bash

source ~/.config/globals

if [ $(pgrep -cx panel) -gt 1 ] ; then
  printf "%s\n" "The panel is already running." >&2
  exit 1
fi

trap 'trap - TERM; kill 0' INT TERM QUIT EXIT

[ -e "$PANEL_FIFO" ] && rm "$PANEL_FIFO"
mkfifo "$PANEL_FIFO"

bspc config top_padding $PANEL_HEIGHT
bspc subscribe > "$PANEL_FIFO" &
clock -sf 'S %c'> "$PANEL_FIFO" &

while true; do
  battery_life=$(acpi -V | head -n 1 | cut -d' ' -f4)
  wifi=$(essid | cut -c1-10)
  vpn=$(ls /var/run/openvpn 2>/dev/null | grep .pid | head -n 1 | xargs -I {} basename {} .pid)
  echo "D" "${BATTERY_ICON} ${battery_life%?}" > "$PANEL_FIFO" &
  echo "I" "${WIFI_ICON} ${wifi}" > "$PANEL_FIFO" &
  echo "V" "${vpn}" > "$PANEL_FIFO" &
        sleep 0.5s
done &

. panel_colors

cat "$PANEL_FIFO" | panel_bar | lemonbar -g 510x$PANEL_HEIGHT+1400+10 -f "$PANEL_FONT_FAMILY" -f "$PANEL_FONT_FAMILY_2" -F "$COLOR_FOREGROUND" -B "$COLOR_BACKGROUND" | sh &

wait

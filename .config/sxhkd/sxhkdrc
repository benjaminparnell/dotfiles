# bspwm hotkeys
#

super + alt + Escape
	pkill -x panel; bspc quit

super + c
	bspc node -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {s,f}
	bspc node -t {floating,fullscreen}

super + {grave,Tab}
	bspc {node,desktop} -f last

super + apostrophe
	bspc node -s last

super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc node -w last.manual

super + m
	bspc node -s biggest

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc node -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc node -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc node -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc node -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

super + @button{1-3}
	bspc pointer -u

super + q
  bspc desktop -f next.free

super + p
  toggle-screenkey

#
# wm independent hotkeys
#

super + Return
	urxvt

super + space
	dmenu_run -i -r -p ">" \
               -sb '#bf7a52' \
               -nb '#1d1f21' \
               -fn 'terminus' \
               -x 480 \
               -y 250 \
               -w 960 \
               -h 10 \
               -l 10

# screenshot hotkeys
# fullscreen
alt + shift + 3
  uguush -o mixtape -t -f

# selection
alt + shift + 4
  uguush -o mixtape -t -s

# current node
alt + shift + 5
  uguush -o mixtape -t -w

# spotify hotkeys
# play/pause
F2
  sp play

F3
  sp next

F4
  sp prev

# brightness up and down
XF86MonBrightnessUp
  ~/.bin/backlight +; \
  ~/.bin/popup backlight: $(~/.bin/backlight level)

XF86MonBrightnessDown
  ~/.bin/backlight -; \
  ~/.bin/popup backlight: $(~/.bin/backlight level)

# volume controls
XF86AudioMute
  ~/.bin/volume !

XF86AudioRaiseVolume
  ~/.bin/volume +; \
  ~/.bin/popup volume: $(~/.bin/volume level)

XF86AudioLowerVolume
  ~/.bin/volume -; \
  ~/.bin/popup volume: $(~/.bin/volume level)

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
